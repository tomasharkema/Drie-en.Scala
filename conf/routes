# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                       controllers.Application.index

GET        /game/id/:gameId        controllers.GameController.game(gameId)
GET        /game/newGame           controllers.GameController.newGame
GET        /game/gameState         controllers.GameController.gameState(id)
GET        /game/commitMove        controllers.GameController.commitMove(redirect: Option[Boolean], gameId, playerId, move, kv)

# Map static resources from the /public folder to the /assets URL path
GET        /assets/*file           controllers.Assets.at(path="/public", file)

    